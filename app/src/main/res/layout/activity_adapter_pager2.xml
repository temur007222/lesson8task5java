<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_width="390dp"
    android:layout_height="170dp"
    android:layout_marginStart="12dp"
    app:cardBackgroundColor="#3CD397"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="170dp">

        <TextView
            android:id="@+id/text_Users_ID"
            android:layout_width="390dp"
            android:layout_height="70dp"
            android:drawablePadding="15dp"
            android:gravity="fill"
            android:paddingStart="15dp"
            android:text="Name"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/people" />

        <TextView
            android:id="@+id/text_UsersNumber_ID"
            android:layout_width="390dp"
            android:layout_height="70dp"
            android:layout_below="@id/text_Users_ID"
            android:layout_marginTop="15dp"
            android:drawablePadding="15dp"
            android:gravity="fill"
            android:paddingStart="15dp"
            android:text="Number"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/people1" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>